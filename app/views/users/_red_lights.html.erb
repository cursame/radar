<div class="intro bg-bluegradient intro-panel">
  <div class="wrapper">
    
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="contenido">
          <div class="title-dashboard">
            <h2>Estado Actual de Peligrosidad</h2>
            <i class="i i-school"></i>
            <h4><%= data.name %></h4>
          </div>
          <div class="current-stat-grade">
            <div class="speech" style="left: <%= "50" %>%;">
              <h3> <%= number_with_precision(index_by_institution_violence(data), :precision => 2) %> %<i class="i i-arrow3"></i></h3> 
              <span>Indicador de peligro</span>
              <span class="tip"></span>
            </div>
            <div class="grades">
              <%= image_tag ('semaforo_dashboard.png') %>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="total-filtro">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="filter-line">
            <div>
              <h4>Denuncias totales <%= data.red_lights.count %>  </h4>
            </div>
            <div class="filtro">
              <p>Ordenar por:</p>
            </div>
           </div>
          </div>
      </div>
    </div>
  </div>
</div>

<% @red_lights = data.red_lights.paginate(:page => params[:page], :per_page => 5).order('created_at DESC')%>
<%= render :partial => '/red_lights/show', locals: {red_lights: @red_lights }%>
<div id="act_acces">
</div>

<% if @red_lights.total_pages > 1 && params[:page].to_i != @red_lights.total_pages.to_i %>
  <div class="btn-copy">
    <span class="btn btn-embed">
      <div id="paginate">
      <%= link_to 'Siguiente', red_lights_paginate_path(page: 2, institution: data), remote: true  %>
      </div>
    </span>
  </div>
<%end%>

