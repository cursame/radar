    <div style="width:100%;">
      <div style="border-left: 1px solid #ececec; border-right: 1px solid #ececec; float:left; padding:20px;"   >
       <div  style="float:left; "  id="div_1_<%=cue%>_<%=d%>_responsive"  ><%=radio_button_tag "opt[#{cue}]", d %> 
       </div>
    </div>
    <% end%>
</div>

