<div class="type-scale">
  <% c = 1 %>
    <% viewver_encode(p.question_requires).each do |vx| %>
    <% c = c + 1 %>
        <div  style="border-left: 1px solid #ececec; border-right: 1px solid #ececec; float:left; padding:20px;" >
          <div style="float:left; min-width:60px;" id="div_1_<%=cue%>_<%=c%>" class="scalex" data-target="div_1_<%=cue%>_<%=c%>_responsive"> 
          <%= vx %>
          </div>
        </div>
