= form_for([:manage, @institution]) do |f|
  .form-group
    = f.label :title, t('.title')
    = f.text_field :title, placeholder: t('.placeholder_title'), required: true, autocomplete: 'off', class: 'form-control'
  .form-group
    = f.label :subdomain, t('.subdomain')
    = f.text_field :subdomain, placeholder: t('.placeholder_subdomain'), required: true, autocomplete: 'off', class: 'form-control'
  .form-group
    = link_to t('.cancel'), :back, class: 'btn btn-primary'
    = f.button t('.save'), type: 'submit', class: 'btn btn-primary'
