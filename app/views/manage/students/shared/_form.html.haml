= form_for([:manage, @institution, @student], html: { class: 'form' }) do |f|
  .form-group
    = f.label :name, t('.name')
    = f.text_field :name, placeholder: t('.placeholder_name'), required: true, autocomplete: 'off', class: 'form-control.col-md-5'
  .form-group
    = f.label :institution, t('.institution')
    = @institution.title
    = f.hidden_field :institution_id, value: @institution.id
  .col-md-13
    .form-group
      = link_to t('.cancel'), manage_institution_students_path(institution_id: @institution.id), class: 'btn btn-primary'
      = f.button t('.save'), type: 'submit', class: 'btn btn-primary'
