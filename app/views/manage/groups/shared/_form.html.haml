= form_for([:manage, @institution, @grade, @group], html: { class: 'form' }) do |f|
  .col-md-3
    .form-group
      = f.label :title, t('.title')
      = f.text_field :title, placeholder: t('.placeholder_title'), required: true, autocomplete: 'off', class: 'form-control'
    .form-group
      = link_to t('.cancel'), manage_institution_grade_groups_path(institution_id: @institution.id, grade_id: @grade.id), class: 'btn btn-primary'
      = f.button t('.save'), type: 'submit', class: 'btn btn-primary'
