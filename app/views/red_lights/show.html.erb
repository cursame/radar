<div class="cases">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-6">
        <div class="col-inner">
          <div class="list-cases">
            <h5>Casos de violencia detectados</h5>
             <% interptreter_quest(@red_ligth.type_denunce, @red_ligth).each do |caso| %>
                <div class="case-item">
                  <p><%= caso %></p>
                </div>
              <%end%></br>
          </div>
        </div>
      </div> 
<div class="col col-6">
