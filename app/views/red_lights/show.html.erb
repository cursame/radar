<div class="detail-element">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="title">
          <ul class="title-line title">
             <li>
                <%= link_to user_path(current_user.id) do %>
                <i class="i i-back"></i>
                <% end %> 
