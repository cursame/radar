<div class="intro-element bg-bluegradient">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
					<h3># <%= @red_ligth.id %> Denuncia</h3>
        </div>
      </div>
    </div>
   </div>
  </div>

<% peligrosidad = @red_ligth.operator.to_s.downcase.gsub!(/\s+/, '-') %>
<div class="detail-element <%= peligrosidad %>">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="title">
          <ul class="title-line title">
             <li>
                <%= link_to user_path(current_user.id) do %>
                <i class="i i-back"></i>
                <% end %> 
              </li>
             <li>
              <h5><%= @red_ligth.operator %></h5>
             </li>
             <li>
              <p><% @red_ligth.types_of_violence.each do |types_of_violence|%> <%= types_of_violence %>
              <%end%></p>
             </li>
           </ul>
          </div>
         


        </div>
      </div>
    </div>
  </div>
</div>

<div class="cases">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-6">
        <div class="col-inner">
          <div class="list-cases">
            <h5>Casos de violencia detectados</h5>
             <% interptreter_quest(@red_ligth.type_denunce, @red_ligth).each do |caso| %>
                <div class="case-item">
                  <p><%= caso %></p>
                </div>
              <%end%></br>
          </div>
        </div>
      </div> 
<div class="col col-6">
        <div class="col-inner">
          <div class="others">
               <h5>Histioria y faltantes</h5>
              <%= simple_format(@red_ligth.history) %>
              <h5>Agresores</h5>
              <%= simple_format(@red_ligth.aggressors) %>
          </div>
        </div>
      </div> 
    </div> 
  </div>
</div>


						
<div class="intro comments">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
<%= render partial: '/internal_comunication/comment_content', locals: {red_ligth: @red_ligth}%>
        </div>
      </div> 
    </div> 
  </div>
</div>



