<% if @cf %>
$('#new_comment').prepend('<%= escape_javascript(render(partial: '/internal_comunication/comment_show', locals: {comment: @comment}))%>');
$('#content').val('');
$('#content').css("border","thin");
<% else %>
$('#content').attr("placeholder", 'El comentario no ha sido coreado porque el campo esta vacio');
$('#content').css("border","solid 5px #D53939");
<% end %>