<div class="titlebox intro intro-contact bg-blue">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="titlebox-content">
            <h2><%= t('contact_form.title')%></h2>
            <p><%= t('contact_form.part')%></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="contact-form">
  <div class="wrapper">
    <div class="cols-12">
      <%= form_tag('/statics_views/mail_to_contact', class: 'validate') do -%>
      <div class="col col-6">
        <div class="col-inner">
          <div class="form-contenido">
            <%= label_tag t('contact_form.email') %></br>
            <%= email_field_tag 'email', '' , placeholder: t('contact_form.holder_a'), required: true %></br>
            <%= label_tag t('contact_form.name') %></br>
            <%= text_field_tag 'nombre', '' , placeholder: t('contact_form.holder_b'), required: true %></br>
            <%= label_tag t('contact_form.school') %></br>
            <%= text_field_tag 'institucion', '' , placeholder: t('contact_form.holder_c'), required: true%></br>
            <%= label_tag t('contact_form.position') %></br>
            <%= text_field_tag 'cargo', '' , placeholder: t('contact_form.holder_d'), required: true%></br>    
          </div>
        </div>
      </div>
      <div class="col col-6">
        <div class="col-inner">
          <div class="form-contenido validate">
            <%= label_tag t('contact_form.telephone')  %>
            </br>
            <%= number_field_tag'phone', '' , placeholder: t('contact_form.holder_e'), required: true%>
            </br>
            <%= label_tag t('contact_form.ext')  %>
            </br>
            <%= number_field_tag 'extencion', '' , placeholder: t('contact_form.holder_f'), required: true%>
            </br>
            <%= label_tag t('contact_form.subject') %>
            </br>
            <%= text_area_tag 'tema', '' , placeholder: t('contact_form.holder_g'), required: true %>
            </br>
            <div>
              <span class="btn btn-input btn-form"><%= submit_tag t('contact_form.send')%></span>
            </div>
          </div>
        </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>