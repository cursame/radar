<div class="titlebox intro intro-contact bg-blue">
  <div class="wrapper">
    <div class="cols-12">
      <div class="col col-12">
        <div class="col-inner">
          <div class="titlebox-content">
            <h2>Contacto</h2>
            <p>Estamos cerca de tí para aclarar tus dudas</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="contact-form">
  <div class="wrapper">

    <div class="cols-12">
      <div class="col col-6">
        <div class="col-inner">
          <div class="form-contenido">
            <%= form_tag('/statics_views/mail_to_contact') do -%>
            <%= label_tag 'email *' %></br>
            <%= email_field_tag 'email', '' , placeholder: 'tu@correo.com' %></br>
            <%= label_tag 'Nombre *' %></br>
            <%= text_field_tag 'nombre', '' , placeholder: 'Nombre completo' %></br>
            <%= label_tag 'Institución *' %></br>
            <%= text_field_tag 'institucion', '' , placeholder: 'Nombre de tu institución educativa'%></br>
            <%= label_tag 'Cargo *' %></br>
            <%= text_field_tag 'cargo', '' , placeholder: 'Cargo que desempeñas'%></br>
            
          </div>
        </div>
      </div>
      <div class="col col-6">
        <div class="col-inner">
          <div class="form-contenido">
            <%= label_tag 'Teléfono *' %></br>
            <%= number_field_tag'phone', '' , placeholder: 'Número Telefónico'%></br>
            <%= label_tag 'Extención *' %></br>
            <%= number_field_tag 'extencion', '' , placeholder: 'Extención'%></br>
            <%= label_tag 'Tema *' %></br>
            <%= text_area_tag 'tema', '' , placeholder: 'Coloque aqui la descripcción detallada de su asunto', :class =>  'contact tema' %></br>
            <div>
              <span class="btn btn-input btn-form"><%= submit_tag 'Contactar'%></span>
            </div>
          <% end -%>
        </div>
        </div>
    </div>


    </div>

  </div>
</div>
