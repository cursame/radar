<div class="bullying-detection intro bg_foco1 bg_blue">
  <div class="wrapper">

      <div class="cols-12">
        <div class="col col-12">
          <div class="col-inner ">
            <h3>Detección de casos de bullying</h3>
          </div>
        </div>
      </div>
    
