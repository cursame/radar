<div class="content-admin">
	<h1>
		<i class="i i-title i-analytics_title"></i>
		Analytics
	</h1>
	<div class="cols-12">			
		<div class="col col-6 alpha">
			<div class="col-inner">		
				<div class="element">
				<span class="total"><%= @institutions %></span>
					<i class="i i-title i-inst_title"></i>
					<h5>Insitituciones</h5>
					
				</div>
			</div>
		</div>

		<div class="col col-6 omega">
			<div class="col-inner">	
				<div class="element">
				<span class="total"><%= @red_lights %></span>
					<i class="i i-title i-focos_title"></i>
					<h5>Focos Rojos</h5>
				</div>
			</div>
		</div>
	</div>

	<div class="cols-12">
		<div class="col col-4 alpha">
			<div class="col-inner">
				<div class="element peligrosidad">
					<i class="i i-face-green"></i>
					<p class="total"> <%= @moderadas %></p>
					<span>Peligrocidad Moderada</span>
					<div class="grade moderada"></div>
				</div>
			</div>
		</div>

		<div class="col col-4">
			<div class="col-inner">
				<div class="element peligrosidad">
					<i class="i i-face-yellow"></i>
					<p class="total"> <%= @medias %> </p>
					<span>Peligrocidad Media</span>
					<div class="grade media"></div>
				</div>
			</div>
		</div>

		<div class="col col-4 omega">
			<div class="col-inner">
				<div class="element peligrosidad">
					<i class="i i-face-red"></i>
					<p class="total"> <%= @medias %> </p>
					<span>Peligrocidad Grave</span>
					<div class="grade grave"></div>
				</div>
			</div>
		</div>
	</div>
			
	<div id="types_of_violence"></div>

	<div class="chart">
		<script>
			$(function () {
				// Make monochrome colors and set them as default for all pies
		    Highcharts.getOptions().plotOptions.pie.colors = (function () {
		        var colors = [],
		            base = Highcharts.getOptions().colors[4],
		            i;

		        for (i = 0; i < 9.5; i += 1) {
		            // Start out with a darkened base color (negative brighten), and end
		            // up with a much brighter color
		            colors.push(Highcharts.Color(base).brighten((i - 3) / 7).get());
		        }
		        return colors;
		    }());

				$('#types_of_violence').highcharts({
					chart: {
						plotBackgroundColor: null,
						plotBorderWidth: 0,
						plotShadow: false
					},
					title: {
						text: '100%',
						align: 'center',
						verticalAlign: 'middle',
						//y: 70
						y: 5
					},
					tooltip: {
						pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
					},
					plotOptions: {
						pie: {
							dataLabels: {
								enabled: true,
								distance: 35,
								//style: {
									//fontWeight: 'bold',
									//color: 'black',
									//textShadow: '0px 1px 2px gray'
								//}
							},
							//startAngle: -90,
							//endAngle: 90,
							//center: ['50%', '70%']
						}
					},
					series: [{
						type: 'pie',
						name: 'Violencia',
						innerSize: '40%',
						data: [
							['Físico',   					 <%=@fisico%>],
							['Amenaza',  					 <%=@amenaza%>],
							['Exclusión', 				 <%=@exclusion%>],
							['Indefensión',        <%=@indefencion%>],
							['Malestar escolar',   <%=@malestar_escolar%>],
							['Violencia verbal',   <%=@violencia_verbal%>],
							['Burla',  						 <%=@burla%>],
							['Cyber bullying',  	 <%=@cyber_bullying%>],
							['Daño a pertenencias',<%=@dano_a_pertenencias%>]
						]
					}]
				});
			});
			</script>
		</div>
	</div>
</div>