<!DOCTYPE html>
<html>
<head>
  <title>Radar</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if notice %>
  <div id="notice"> <%= notice %></div>
<%end%>
	<div class="header">
		<div class="wrapper">
			<div class="cols-12">
        <div class="col col-12">
          <div class="col-inner">
            <ul class="menu">
              <li><%= link_to image_tag('radar.png'), root_path %></li>
              <li class="space">
                <%= link_to "Denuncia confidencial", foco_rojo_path, class: "nav-top" %></li>
              <li class="space">
                <%= link_to "Autodiagnóstico", diagnostico_path, class: "nav-top" %></li>
              <li class="space">
                <%= link_to "Contacto", contacto_path, class: "nav-top" %>
              </li>
            </ul>
            <div class="singin-button">
              <%= link_to "Iniciar sesión →", login_path, class: "login" %>
            </div>
          </div>
        </div>
      </div>
		</div>
	</div>
<%= yield %>
<div class="footer">
    <div class="wrapper">
      <div class="cols-12">
        <div class="col col-12">
          <div class="col-inner">
            <div class="footer-menu">
              <%=image_tag('cursame.png')%>
              <ul class="footermenu">
                <li class="space">
                  <%= link_to "Denuncia confidencial", foco_rojo_path, class: "nav-bottom" %></li>
                <li class="space">
                  <%= link_to "Autodiagnóstico", diagnostico_path, class: "nav-bottom" %></li>
                <li class="btn_primary">
                  <%= link_to "Nosotros", nosotros_path, class: "nav-bottom" %></li>
              </ul>
            </div>
            <div class="powered-by">
              <%=image_tag('footerlogo.png')%>
            </div>
          </div>
        </div>
      </div>
    </div>
</body>
</html>

<script type="text/javascript">
	setTimeout(function(){$('#notice').hide();}, 4000);

</script>

